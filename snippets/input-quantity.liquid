{%-liquid
  assign class = id | prepend: 'id-'
-%}

<div
  class="container-quantity quantity-label"
>
  <span class="btn-change button"
    data-action="subtr"
  >
    -
  </span>

  <input
    class="input-quantity item-cart-js"
    id="{{ id }}-{{ index }}"
    min="0"
    data-index='{{ index }}'
    value="{{ cart_item.quantity }}"
  />

  <span class="btn-change button"
    data-action="plus"
  >
    +
  </span>

</div>

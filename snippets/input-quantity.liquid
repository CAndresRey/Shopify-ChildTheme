{%-liquid
  assign class = id | prepend: 'id-'
-%}

<button type="button" 
  data-input="{{ id }}" 
  class="quantity-btn btn-less"
>
  -
</button>

{% render 'input'
  input_class: "input-quantity",
  id_class: class
  type: "number",
  id: id,
  value: cart_item.quantity
%}

<button type="button" 
  data-input="{{ id }}" 
  class="quantity-btn btn-plus"
>
  +
</button>
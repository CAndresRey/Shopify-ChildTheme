<div
  class="main__title__section"
>
  {% if section.settings.title != blank %}
    <h1>
      {{ section.settings.title }}
    </h1>
  {% endif %}

  {% if section.settings.link != blank and section.settings.link_text != blank %}
    {% render 'link', url: section.settings.link, content: section.settings.link_text, class: 'btn-1' %}
  {% endif %}
</div>
{% schema %}
{
  "name": "Title section",
  "tag": "section",
  "class": "title-section",
  "settings": [
      {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title"
      },
      {
          "type": "text",
          "id": "link",
          "label": "Link",
          "default": "cta"
      },
      {
          "type": "text",
          "id": "link_text",
          "label": "Link text",
          "default": "Link"
      }
  ],
  "presets": [
    {
      "name": "Title section",
      "settings": {
          "title": "Title",
          "link": "www.google.com",
          "link_text": "Link"
      }
    }
  ]
}
{% endschema %}

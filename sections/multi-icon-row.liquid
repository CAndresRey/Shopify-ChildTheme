{%- comment -%}
  If you want to get different UI from our customization code.
  You could change this properties:

  - position_icons: Text orientation -> left | top
  - slider_mobile: Mobile slider UI -> true | false

{%- endcomment -%}

{% liquid
  assign position_icons = 'top'
  assign slider_mobile = true
%}

{% if section.settings.heading != blank %}
  <h2>
    {{ section.settings.heading }}
  </h2>
{% endif %}

<div class="flex elements__icons {% if slider_mobile %}slider_mobile{% endif %}">
  {% for block in section.blocks %}
  {% if block.settings.row_icon_image != blank %}
    <div class="element__icon {% if position_icons == 'left' %}position__left{% else %}position__top{% endif %}"
    >
        {% assign url = block.settings.row_icon_image | append: '.svg' | file_url %}
        {% render "render-image"
          class: "class_image",
          img_src: url,
          alt: block.settings.row_icon_image,
          width: "80",
          height: "80"
        %}


      {% if block.settings.heading != blank or block.settings.row_icon_description != blank %}
        <div class="element__icon--description">
          {% if block.settings.heading != blank %}
            <h3>
              {{ block.settings.heading }}
            </h3>
          {% endif %}

          {% if block.settings.row_icon_description != blank %}
            <p>{{ block.settings.row_icon_description }}</p>
          {% endif %}
        </div>
      {% endif %}
    </div>
    {% endif %}
  {% endfor %}
</div>

{% schema %}
  {
    "name": "Row icons",
    "class": "row__icons wrapper",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Title"
      }
    ],
    "max_blocks": 5,
    "blocks": [
      {
        "name": "List items",
        "type": "icon",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Title",
            "default": "Icon"
          },
          {
            "type": "richtext",
            "id": "row_icon_description",
            "label": "Description",
            "default": "<p>Lorem ipsum letto</p>"
          },
          {
            "type": "text",
            "id": "row_icon_image",
            "label": "Image Mobile",
            "default": "icon"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Row icons",
        "blocks": [
          {
            "type": "icon"
          },
          {
            "type": "icon"
          },
          {
            "type": "icon"
          },
          {
            "type": "icon"
          }
        ]
      }
    ]
  }
{% endschema %}

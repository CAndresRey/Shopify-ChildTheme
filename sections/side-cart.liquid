<div class="cart-wrapper">

  {% render 'cart-header'
    cart: cart
    title: section.settings.cart_title
    limit_price: section.settings.limit_price
  %}
  
  {% render 'cart-items' 
    cart: cart
    cart_empty_message: section.settings.cart_empty
  %}

  <div class="cart-upsell cart-margins__inline">
    {% render 'cart-upsell'
      cart: cart,
      collection: section.settings.upsell_collection
      title: section.settings.upsell_title
    %}
  </div>
  
  {% render 'cart-footer'
    cart: cart,
    cart_blocks: section.blocks,
    cart_content: section.settings.cart_content,
    shipping_info: section.settings.shipping_info,
    checkout_button: section.settings.checkout_button
  %}
  
  <span class="cart-close">
    {% render 'icon-close' %}
  </span>

</div>


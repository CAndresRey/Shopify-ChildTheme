{% for block in section.blocks %}
    {% render 'accordion-item',
    title: block.settings.heading,
    text_content: block.settings.text_content,
    class: "item-tab",
    type: "tabs"
    %}
{% endfor %}

{% schema %}
{
  "name": "tabs",
  "class": "tabs-container",
  "blocks": [
    {
      "type": "content",
      "name": "tabs content",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Tab heading"
        },
        {
          "type": "textarea",
          "id": "text_content",
          "label": "Content",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
        }
      ]
    }
  ],
  "settings": [
  ],
  "presets": [
     {
       "name": "Tabs",
       "blocks": [
          {
            "type": "content"
          },
          {
            "type": "content"
          },
          {
            "type": "content"
          },
          {
            "type": "content"
          }
        ]
     }
  ]
}
{% endschema %}